        <loadData encoding="UTF-8"
                  file="config/liquibase/populate/recipe.csv"
                  separator=";"
                  tableName="recipe">
            <column name="ingredients_in_steps" type="boolean"/>
            <column name="creation_date" type="timestamp"/>
            <column name="update_date" type="timestamp"/>
        </loadData>

    </changeSet>

</databaseChangeLog>
